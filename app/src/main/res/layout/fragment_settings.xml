<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.levor.liferpg.View.Fragments.SettingsFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dropbox_activation_status"
        android:id="@+id/dropbox_activation_status_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/dropbox_activation_status_value"
        android:layout_below="@+id/dropbox_activation_status_text"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_dropbox_button_text"
        android:id="@+id/enable_dropbox_button"
        android:layout_below="@+id/dropbox_activation_status_value"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
