<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.levor.liferpgtasks.view.fragments.SettingsFragment"
    android:layout_margin="@dimen/save_zone_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/statistics_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LifeRPGSettingsItemsStyle">

            <ImageView
                android:id="@+id/statistics_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/statistics_arrow"
                android:text="@string/statistics" />
        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:id="@+id/achievements_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LifeRPGSettingsItemsStyle">

            <ImageView
                android:id="@+id/achievements_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/achievements_arrow"
                android:text="@string/achievements" />
        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:id="@+id/export_import_db_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LifeRPGSettingsItemsStyle">

            <ImageView
                android:id="@+id/export_import_db_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/export_import_db_arrow"
                android:text="@string/export_import_db" />
        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:id="@+id/contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LifeRPGSettingsItemsStyle">

            <ImageView
                android:id="@+id/contact_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/contact_arrow"
                android:text="@string/contact" />
        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:id="@+id/app_on_google_play_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LifeRPGSettingsItemsStyle">

            <ImageView
                android:id="@+id/app_on_google_play_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/app_on_google_play_arrow"
                android:text="@string/app_on_google_play" />
        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:id="@+id/reset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LifeRPGSettingsItemsStyle">

            <ImageView
                android:id="@+id/reset_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/reset_arrow"
                android:text="@string/reset" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>