<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.levor.liferpg.View.Obsolete.DetailedCharacteristicActivity">

    <TextView
        android:id="@+id/level"
        android:text="@string/characteristic_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/level_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/level"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/related_skill"
        android:text="@string/characteristic_related_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level"
        android:textSize="20sp"/>

    <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:layout_below="@id/related_skill"> </ListView>

</RelativeLayout>
