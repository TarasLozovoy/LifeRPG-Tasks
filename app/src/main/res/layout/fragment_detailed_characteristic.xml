<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/save_zone_margin">

            <TextView
                android:id="@+id/characteristic_title"
                style="@style/LifeRPGTextTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/level"
                style="@style/LifeRPGTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/characteristic_title"
                android:text="@string/characteristic_level" />

            <TextView
                android:id="@+id/level_value"
                style="@style/LifeRPGTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/characteristic_title"
                android:layout_toRightOf="@id/level" />

            <RelativeLayout
                android:id="@+id/related_skill_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/level">

                <Button
                    android:id="@+id/add_skill_button"
                    style="@style/LifeRPGDefaultButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/create_new_skill" />

                <TextView
                    style="@style/LifeRPGTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@id/add_skill_button"
                    android:text="@string/characteristic_related_skills" />

            </RelativeLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/save_zone_margin"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_mode_edit_black_24dp"
        app:pressedTranslationZ="6dp"
        app:rippleColor="@color/red"
        app:layout_behavior="com.levor.liferpgtasks.ScrollAwareFABBehavior"/>

</android.support.design.widget.CoordinatorLayout>