<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/save_zone_margin">

    <TextView
        android:id="@+id/task_title"
        style="@style/LifeRPGTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/task_date_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_title"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:id="@+id/task_reward_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_date_text_view"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/task_reward_text_view"
            style="@style/LifeRPGTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/gold_coin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gold_coin_icon"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/task_repeat_times_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_reward_layout"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/notification_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_repeat_times_text_view"
        android:layout_marginBottom="3dp"
        android:text="@string/show_notification" />

    <TextView
        android:id="@+id/habit_generation_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_text_view"
        android:layout_marginBottom="3dp"
        android:text="@string/show_notification"
        android:visibility="gone" />

    <TextView
        android:id="@+id/task_difficulty_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/habit_generation_text_view"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/task_importance_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_difficulty_text_view"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/number_of_executions_text_view"
        style="@style/LifeRPGTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_importance_text_view"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/related_skills"
        style="@style/LifeRPGTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_executions_text_view"
        android:layout_marginBottom="3dp"
        android:text="@string/related_skills" />

    <TextView
        android:id="@+id/no_related_skills"
        style="@style/LifeRPGTextTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/related_skills"
        android:gravity="center"
        android:text="@string/no_related_skills"
        android:visibility="gone" />

</RelativeLayout>