<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/repeatability_container_tasks_list_item"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/list_item_title"
            style="@style/LifeRPGTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_date"
            style="@style/LifeRPGListItemSecondLevelTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/repeatability_container_tasks_list_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/check_button">

        <TextView
            android:id="@+id/repeatability_tasks_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="3dp"
            android:textColor="@color/black"
            android:textSize="7sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/habit_days_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/repeatability_container_tasks_list_item"
        android:layout_alignRight="@+id/repeatability_container_tasks_list_item"
        android:layout_below="@+id/repeatability_container_tasks_list_item"
        android:layout_toLeftOf="@+id/check_button"
        android:paddingTop="2dp"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/check_button"
        style="@style/LifeRPGDefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_done_black_24dp" />

</RelativeLayout>