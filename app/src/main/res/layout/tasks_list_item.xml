<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/repeatability_container_tasks_list_item"
        android:paddingLeft="4dp"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/repeatability_container_tasks_list_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/check_button">

        <TextView
            android:id="@+id/repeatability_tasks_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="3dp"
            android:textColor="@color/black"
            android:textSize="7sp" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/check_button"
        style="@style/LifeRPGDefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_done_black_24dp"
        />
        <!--android:text="@string/do_task" />-->

</RelativeLayout>