<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/accent">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/button_background_pressed"
                android:endColor="@color/button_background_pressed"
                android:angle="270" />
            <!--<stroke-->
                <!--android:width="1dp"-->
                <!--android:color="@color/material_teal_200" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/button_background"
                android:startColor="@color/button_background"
                android:angle="270" />
            <!--<stroke-->
                <!--android:width="1dp"-->
                <!--android:color="@color/material_teal_200" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:endColor="@color/light_gray"
                android:startColor="@color/light_gray"
                android:angle="270" />
            <!--<stroke-->
                <!--android:width="1dp"-->
                <!--android:color="@color/material_teal_200" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/button_background"
                android:startColor="@color/button_background"
                android:angle="270" />
            <!--<stroke-->
                <!--android:width="1dp"-->
                <!--android:color="@color/material_teal_200" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</ripple>