<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:buttonStyle">@style/LifeRPGDefaultButton</item>
    </style>

    <!-- Default text style -->
    <style name="LifeRPGTextStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <!-- Default text title style -->
    <style name="LifeRPGTextTitleStyle">
        <item name="android:textSize">@dimen/default_title_text_size</item>
    </style>

    <!-- Second level text style -->
    <style name="LifeRPGListItemSecondLevelTextStyle">
        <item name="android:textSize">@dimen/second_level_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Default text for list elements style -->
    <style name="LifeRPGTextInListStyleSmall">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <!-- Default text for list elements style -->
    <style name="LifeRPGTextInListStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--Style of text in tabs-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CoachmarksText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="HorizontalDivider.NoMargins">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="HorizontalDivider.SmallMargins" parent="HorizontalDivider">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="LifeRPGDefaultButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Default text for list elements style in settings -->
    <style name="LifeRPGSettingsItemsStyle">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
